{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@": ["./*"],
      "@src": ["./src/*"],
      "@assets": ["src/assets/*"],
      "@comp": ["src/components/*"],
      "@styles": ["src/assets/styles/*"]
    },
    "target": "es6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".git"],
}
